<RadzenLayout Style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader>
        <div class="header">
            <RadzenSidebarToggle class="menu-toggle" Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <div class="right-controls">
                <CultureSelector />
                <RadzenButton Shade="Shade.Lighter" Text="Login" ButtonStyle="ButtonStyle.Primary" Click="@(() => navigationManager.NavigateTo("Login"))" />
                <RadzenAppearanceToggle ButtonStyle="ButtonStyle.Info" 
                                        ToggleButtonStyle="ButtonStyle.Info" 
                                        Variant="Variant.Outlined" />
            </div>
        </div>

    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody id="scrollableContent">
        @Body
    </RadzenBody>
</RadzenLayout>


<RadzenButton Icon="chat"
              Style="position:fixed; bottom:20px; right:20px; z-index:1000;"
              ButtonStyle="ButtonStyle.Primary"
              Size="ButtonSize.Medium"
              Click="OpenChat">
</RadzenButton>

<RadzenComponents @rendermode="InteractiveAuto" />

@code {
    bool sidebarExpanded = true;

    public async Task OpenChat()
    {
        await dialogService.OpenAsync<ChatDialog>("小幫手",
            new Dictionary<string, object>(),
            new DialogOptions()
                {
                    Width = "400px",
                    Height = "600px",
                    Draggable = true,
                    Resizable = false,
                    Style = "position:fixed; bottom:80px; right:20px; z-index:1050;"
                });
    }
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

